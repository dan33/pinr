<div class="row">
  <div class="large-5 columns">
    <%= form_tag '/login' do %>
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, :autofocus => true %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag 'Login', :class => 'button radius' %>
    <% end %>
  </div>
  <div class="large-7 columns">
  </div>
</div>