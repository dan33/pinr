%div
  %div
    = form_tag '/login' do
      = label_tag :email
      = text_field_tag :email, nil, :autofocus => true, :placeholder => 'Email: '
      %br/
      = label_tag :password
      = password_field_tag :password, :placeholder => 'Password: '
      %br/
      = submit_tag 'Login', :class => 'login_submit'
  %div